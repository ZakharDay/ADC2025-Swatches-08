<p style="color: green"><%= notice %></p>

<% content_for :title, "Swatches" %>

<h1>Swatches</h1>
<%= link_to "New swatch", new_swatch_path %>

<div id="swatches">
  <% @swatches.each do |swatch| %>
    <%= render swatch %>
    <p>
      <%= link_to "Show this swatch", swatch %>
    </p>
  <% end %>
</div>
