<p style="color: green"><%= notice %></p>

<%= render @fill %>

<%= render @fill.colors %>

<% if can? :manage, @fill %>
  <div>
    <%= link_to "Edit this fill", edit_fill_path(@fill) %> |
    <%= link_to "Back to fills", fills_path %>
    <%= link_to "Destroy this fill", @fill, data: { turbo_stream: false, turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </div>
<% end %>

<h3>
  <%= @fill.comments.count %>
  <%= I18n.translate 'comment', count: @fill.comments.count %>
</h3>

<div>
  <%= render "comments/form", comment: Comment.new, fill: @fill %>
</div>

<%= render @fill.comments %>